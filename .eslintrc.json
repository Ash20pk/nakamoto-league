{
  "extends": "next/core-web-vitals",
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "react/no-unescaped-entities": "off",
    "react-hooks/exhaustive-deps": "off",
    "prefer-const": "off",
    "@next/next/no-img-element": "off"
  },
  "ignorePatterns": [
    "src/app/api/user/warrior/route.ts",
    "src/app/api/warriors/[id]/dojo/route.ts",
    "src/app/api/warriors/[id]/route.ts",
    "src/app/dashboard/page.tsx",
    "src/app/dojos/[id]/page.tsx",
    "src/app/dojos/page.tsx",
    "src/app/page.tsx",
    "src/app/tournaments/page.tsx",
    "src/app/warriors/[id]/page.tsx",
    "src/app/warriors/page.tsx",
    "src/contexts/WarriorStatsContext.tsx",
    "src/hooks/useDojo.ts",
    "src/hooks/useWarriorStats.ts",
    "src/providers/AuthProvider.tsx"
  ]
}
